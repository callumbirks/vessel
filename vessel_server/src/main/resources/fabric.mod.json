{
  "schemaVersion": 1,
  "id": "vessel_server",
  "version": "${version}",
  "name": "Vessel Server",
  "description": "A kitchen-sink utility mod for servers with server-only features. Built for the Doofcraft Cobblemon server.",
  "authors": [
    "Callum Birks"
  ],
  "contact": {
    "homepage": "https://doofcraft.com/"
  },
  "license": "ARR",
  "icon": "assets/vessel/icon.png",
  "environment": "*",
  "entrypoints": {
    "server": [
      {
        "value": "com.doofcraft.vessel.server.VesselServer",
        "adapter": "kotlin"
      }
    ]
  },
  "mixins": [
    "vessel.mixins.json"
  ],
  "accessWidener": "vessel.accesswidener",
  "depends": {
    "fabricloader": ">=0.16.14",
    "minecraft": "~1.21.1",
    "java": ">=21",
    "fabric-api": "*",
    "fabric-language-kotlin": "*"
  }
}