{
	"schemaVersion": 1,
	"id": "vessel",
	"version": "${version}",
	"name": "Vessel",
	"description": "A dynamic item registry system designed for servers with server-only logic",
	"authors": [
		"callumbirks"
	],
	"contact": {
		"homepage": "https://doofcraft.com/",
		"sources": "https://github.com/callumbirks/vessel"
	},
	"license": "CC0-1.0",
	"icon": "assets/vessel/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"value": "com.doofcraft.vessel.VesselMod",
				"adapter": "kotlin"
			}
		],
		"client": [
			{
				"value": "com.doofcraft.vessel.VesselClient",
				"adapter": "kotlin"
			}
		],
        "server": [
            {
                "value": "com.doofcraft.vessel.VesselServerMod",
                "adapter": "kotlin"
            }
        ]
	},
	"mixins": [
        "vessel.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.17.2",
		"minecraft": "~1.21.1",
		"java": ">=21",
		"fabric-api": "*",
		"fabric-language-kotlin": "*"
	}
}